{
	"private": true,
	"scripts": {
		"build": "parcel build source/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
	    "test": "jest",
		"watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "browser"
				}
			]
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"@parcel/core": ">=2.3.1 <3.0.0",
		"@picocss/pico": "^1.4.4",
		"@types/download": "8.0.1",
		"body-parser": "1.19.1",
		"can": "^6.6.2",
		"download": "8.0.0",
		"express": "4.17.2",
		"safe-compare": "1.1.4",
		"web-ext": "^6.7.0",
		"webext-options-sync": "^2.0.1",
		"webextension-polyfill": "^0.8.0",
		"webpack": "^5.69.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.0.0-rc.0",
		"@parcel/transformer-image": "^2.0.0-rc.0",
		"jest": "^27.5.1",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.3.1",
		"process": "^0.11.10",
		"stylelint": "^14.5.1",
		"stylelint-config-xo": "^0.1.0",
		"xo": "^0.44.0"
	},
	"webExt": {
		"sourceDir": "distribution"
	}
}
